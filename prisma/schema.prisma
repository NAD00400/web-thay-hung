generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

////// üü¢ ENUMS (C√°c gi√° tr·ªã c·ªë ƒë·ªãnh) üü¢ //////

enum TrangThaiDonHang {
  CHO_XAC_NHAN
  DANG_XU_LY
  DANG_VAN_CHUYEN
  DA_GIAO
  DA_HUY
}

enum PhuongThucThanhToan {
  ZALOPAY
  CHUYEN_KHOAN
  TIEN_MAT
}

enum TrangThaiThanhToan {
  CHUA_THANH_TOAN
  DA_THANH_TOAN
  CHO_XAC_NHAN
}

enum VaiTroNguoiDung {
  KHACH_HANG
  ADMIN
  NHAN_VIEN
}

////// üü¢ MODELS (B·∫£ng d·ªØ li·ªáu) üü¢ //////

model ChiTietDonHang {
  ma_chi_tiet_don_hang String @id @default(uuid())
  ma_don_hang          String
  ma_san_pham          String
  so_luong             Int
  gia_tien             Float

  // Quan h·ªá: M·ªôt ƒë∆°n h√†ng c√≥ nhi·ªÅu chi ti·∫øt ƒë∆°n h√†ng
  don_hang   DonHang       @relation(fields: [ma_don_hang], references: [ma_don_hang])
  // Quan h·ªá: M·ªôt s·∫£n ph·∫©m c√≥ th·ªÉ xu·∫•t hi·ªán ·ªü nhi·ªÅu chi ti·∫øt ƒë∆°n h√†ng
  san_pham   SanPhamDatMay @relation(fields: [ma_san_pham], references: [ma_san_pham_dat_may])
  SoDoDatMay SoDoDatMay?
}

model ChiTietGioHang {
  ma_chi_tiet_gio_hang String @id @default(uuid())
  ma_gio_hang          String
  ma_san_pham_dat_may  String
  so_luong             Int

  // Quan h·ªá: M·ªôt gi·ªè h√†ng c√≥ nhi·ªÅu chi ti·∫øt gi·ªè h√†ng
  gio_hang GioHang @relation(fields: [ma_gio_hang], references: [ma_gio_hang])
}

model DanhMuc {
  ma_danh_muc   String @id @default(uuid())
  ten_danh_muc  String
  danh_muc_slug String @unique
  url_image     String

  // Quan h·ªá: M·ªôt danh m·ª•c c√≥ nhi·ªÅu s·∫£n ph·∫©m
  san_pham_dat_may SanPhamDatMay[]
}

model DonHang {
  ma_don_hang            String              @id @default(uuid())
  ma_khach_hang          String
  ngay_dat_hang          DateTime            @default(now())
  trang_thai_don_hang    TrangThaiDonHang
  tong_tien_don_hang     Float
  phuong_thuc_thanh_toan PhuongThucThanhToan
  thanh_toan_thanh_cong  Boolean
  ghi_chu                String?
  ngay_cap_nhat          DateTime            @default(now())

 
  khach_hang        KhachHang        @relation(fields: [ma_khach_hang], references: [ma_khach_hang])
 
  chi_tiet_don_hang ChiTietDonHang[]

  hoa_don           HoaDon?
  giao_hang         GiaoHang?
  thanh_toan        ThanhToan?
}

model GiaoHang {
  ma_giao_hang      String           @id @default(uuid())
  ma_don_hang       String           @unique
  trang_thai        TrangThaiDonHang
  phi_van_chuyen    Float
  dia_chi_giao_hang String
  ngay_giao_du_kien DateTime?
  ngay_giao_thuc_te DateTime?

  don_hang DonHang @relation(fields: [ma_don_hang], references: [ma_don_hang])
}

model GioHang {
  ma_gio_hang   String   @id @default(uuid())
  ma_khach_hang String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @default(now())

  chi_tiet_gio_hang ChiTietGioHang[]
  khach_hang        KhachHang        @relation(fields: [ma_khach_hang], references: [ma_khach_hang])
}

model HoaDon {
  ma_hoa_don              String             @id @default(uuid())
  ma_don_hang             String             @unique
  so_hoa_don              String
  tien_can_thanh_toan     Decimal
  tien_da_thanh_toan      Decimal
  thue                    Decimal
  ngay_phat_hanh          DateTime
  ngay_het_han_thanh_toan DateTime
  ngay_cap_nhat           DateTime
  trang_thanh_toan        TrangThaiThanhToan @default(CHUA_THANH_TOAN)

  don_hang DonHang @relation(fields: [ma_don_hang], references: [ma_don_hang])
}

model KhachHang {
  ma_khach_hang      String @id @default(uuid())
  ten_khach_hang     String @default("Unknown")
  ma_nguoi_dung      String? @unique
  so_dien_thoai      String
  dia_chi_khach_hang String
  nguoi_dung NguoiDung?          @relation(fields: [ma_nguoi_dung], references: [ma_nguoi_dung])
  don_hang   DonHang[]
  lich_hen   LichHenKhachHang[]
  GioHang    GioHang[]
}

model LichHenKhachHang {
  ma_lich_hen   String   @id @default(uuid())
  ma_khach_hang String
  ngay_hen      DateTime
  ngay_tao      DateTime
  trang         String
  
  khach_hang KhachHang @relation(fields: [ma_khach_hang], references: [ma_khach_hang])
}

model NguoiDung {
  ma_nguoi_dung     String          @id @default(uuid())
  email_nguoi_dung  String          @unique
  ten_nguoi_dung    String
  vai_tro           VaiTroNguoiDung @default(KHACH_HANG)
  ngay_tao          DateTime        @default(now())
  ngay_cap_nhat     DateTime        @default(now())
  link_anh_dai_dien String?
  firebaseId        String          @unique

  khach_hang KhachHang?
}

model PhuLieuMayMac {
  ma_phu_lieu   String   @id @default(uuid())
  vai_chinh     String?
  chi           String?
  nut           String?
  ngay_tao      DateTime @default(now())
  day_keo       String?
  ngay_cap_nhat DateTime @default(now())
  ren           String?
  vai_lot       String?
  hat_cuom      String?
  mech_dung     String?

  // Quan h·ªá 1-n: M·ªôt ph·ª• li·ªáu c√≥ th·ªÉ ƒë∆∞·ª£c d√πng cho nhi·ªÅu s·∫£n ph·∫©m
  san_pham SanPhamDatMay[]
}

model SanPhamDatMay {
  ma_san_pham_dat_may String   @id @default(uuid())
  ma_danh_muc         String
  ten_san_pham        String
  gia_tien            Float
  mo_ta_san_pham      String
  url_image           String
  ngay_tao            DateTime @default(now())
  ngay_cap_nhat       DateTime @default(now())
  co_san              Boolean  @default(false)
  ma_phu_lieu         String?

  danh_muc          DanhMuc          @relation(fields: [ma_danh_muc], references: [ma_danh_muc])
  phu_lieu          PhuLieuMayMac?   @relation(fields: [ma_phu_lieu], references: [ma_phu_lieu])
  chi_tiet_don_hang ChiTietDonHang[]
}

model SoDoDatMay {
  ma_so_do                String   @id @default(uuid())
  ma_chi_tiet_don_hang    String   @unique
  vong_nguc               Float
  vong_co                 Float
  vong_eo                 Float
  be_ngang_vai            Float
  vong_hong               Float
  chieu_dai_ao            Float
  chieu_dai_tu_vai_toi_eo Float
  chieu_dai_tay_ao        Float
  vong_bap_tay            Float
  vong_khuy_tay           Float
  vong_co_tay             Float
  chieu_dai_quan          Float
  createdAt               DateTime @default(now())
  vong_dui                Float
  vong_dau_goi            String?
  vong_ong_quan           String?

  chi_tiet_don_hang ChiTietDonHang @relation(fields: [ma_chi_tiet_don_hang], references: [ma_chi_tiet_don_hang])
}

model ThanhToan {
  ma_thanh_toan String              @id @default(uuid())
  ma_don_hang   String              @unique
  paymentMethod PhuongThucThanhToan
  paymentStatus TrangThaiThanhToan
  transactionId String              @unique
  createdAt     DateTime            @default(now())
  paymentDate   DateTime            @default(now())
  paymentType   String

  don_hang DonHang @relation(fields: [ma_don_hang], references: [ma_don_hang])
}
